pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'main', url: 'https://github.com/Nagarajumc/Telecom.git'
            }  
        }
		
		
		
	 stage('sonar scan') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://44.210.116.12:9000 \\
                      -Dsonar.login=squ_a46b6947d43a812180415ff94219120d2ddebcea'''
            }
    	}
		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		
		
		
        stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t nagarajumc/telecom:${BUILD_NUMBER} .'
            }
        }
		
		stage('Scan Image') {
                 steps {
                     sh 'trivy image nagarajumc/telecom:latest --severity HIGH,CRITICAL'
                                       }
                                 }
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            sh 'docker login -u nagarajumc -p ${dockerhub}'
			
			 }
			   sh 'docker push nagarajumc/job13:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
		
    stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "Telecom"
            GIT_USER_NAME = "nagarajumc"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  sh '''
                    git config user.email "nagarajumc@gmail.com"
                    git config user.name "nagaraju"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/telecom:.*/telecom:${BUILD_NUMBER}/g" K8s deploymwntfiles/Deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}



